<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/btnPatientRequest"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/button_home"
        android:text="Patient Request"
        android:textColor="#22BE87"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:gravity="bottom|center"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="@id/btnlistPatients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnmyCalendar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_PatReq"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:elevation="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPatientRequest"
        app:layout_constraintEnd_toEndOf="@+id/btnPatientRequest"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/btnPatientRequest"
        app:layout_constraintTop_toTopOf="@+id/btnPatientRequest"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@drawable/ic_request" />

    <Button
        android:id="@+id/btnlistPatients"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="237dp"
        android:background="@drawable/button_home"
        android:gravity="bottom|center"
        android:paddingBottom="8dp"
        android:text="Patients List"
        android:textAllCaps="false"
        android:textColor="#22BE87"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_PatList"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="40dp"
        android:elevation="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnlistPatients"
        app:layout_constraintEnd_toEndOf="@+id/btnlistPatients"
        app:layout_constraintTop_toTopOf="@+id/btnlistPatients"
        app:layout_constraintStart_toStartOf="@+id/btnlistPatients"
        app:srcCompat="@drawable/ic_person" />

    <Button
        android:id="@+id/btnmyCalendar"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:background="@drawable/button_home"
        android:gravity="bottom|center"
        android:paddingBottom="8dp"
        android:text="My Calendar"
        android:textAllCaps="false"
        android:textColor="#22BE87"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btnPatientRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPatientRequest"/>

    <ImageView
        android:id="@+id/iv_Calendar"
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:layout_marginBottom="80dp"
        android:elevation="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnmyCalendar"
        app:layout_constraintEnd_toEndOf="@+id/btnmyCalendar"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/btnmyCalendar"
        app:layout_constraintTop_toTopOf="@+id/btnmyCalendar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_calendar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>